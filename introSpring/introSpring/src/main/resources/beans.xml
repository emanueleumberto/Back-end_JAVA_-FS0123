    	<constructor-arg index="1" type="String" value="Costruzione primo bean da file Configuration XML!"></constructor-arg>
    </bean>
    
    <!-- Crea un bean di tipo Test -->
    <bean id="testXMLParams" class="com.epicode.config_bean.configurationXML.TestXML" scope="prototype">
